<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser">

    <include package="Products.CMFCore" file="permissions.zcml" />

    <browser:page
        name="queue-task-form"
        for="*"
        class=".test_acceptance_views.TaskQueueForm"
        permission="cmf.ManagePortal"
        />

    <browser:page
        name="queue-task-email-form"
        for="*"
        class=".test_acceptance_views.TaskQueueEmailForm"
        permission="cmf.ManagePortal"
        />

    <browser:page
        name="send-email-view"
        for="*"
        class=".test_acceptance_views.TaskQueueEmailView"
        layer="collective.taskqueue.interfaces.ITaskQueueLayer"
        permission="zope2.View"
        />

</configure>
